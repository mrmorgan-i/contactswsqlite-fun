<UserControl x:Class="ContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsApp.Controls"
             xmlns:uc="clr-namespace:ContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="400">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock Text="SomeName"
                       x:Name="nameTextBlock"
                       FontWeight="Bold"
                       FontSize="20"/>
            <TextBlock Text="SomeEmail"
                       x:Name="emailTextBlock"
                       FontSize="15"
                       Foreground="DodgerBlue"/>
            <TextBlock Text="SomePhone"
                       x:Name="phoneTextBlock"
                       FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
